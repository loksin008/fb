#!/bin/bash

# Function to get and announce the current and next day's date and time
speak_datetime() {
    # Get the current day, month, date, and time
    current_datetime=$(date +"%A, %B %d,")
    current_time=$(date +"%I:%M %p")  # Get time separately for highlighting
    # Get the next day's date
    next_day=$(date -d "+1 day" +"%A, %B %d")

    # Display current date and time, with time in yellow text and green background
    echo -e "Today is $current_datetime \033[1;33m\033[42m$current_time\033[0m"
    echo "Tomorrow is $next_day"
    
    # Check if espeak is installed
    if command -v espeak >/dev/null 2>&1; then
        # Use espeak to vocalize with a slower speed
        espeak -s 100 "Today is $current_datetime $current_time. Tomorrow is $next_day"
    else
        echo "Error: espeak is not installed. Please install it and try again."
        exit 1
    fi
}

# Call the function
speak_datetime
