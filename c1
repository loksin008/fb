#!/bin/bash

# Function to get the current date and time in a readable format
speak_datetime() {
    current_datetime=$(date +"%A, %B %d, %I:%M %p") # Format: Day, Month Date, hh:mm AM/PM
    echo "Today is $current_datetime"
    
    # Check if espeak is installed
    if command -v espeak >/dev/null 2>&1; then
        # Save the audio to a file and play with aplay (or directly with espeak)
        espeak "Today is $current_datetime" --stdout | aplay 2>/dev/null
    else
        echo "Error: espeak is not installed. Please install it and try again."
        exit 1
    fi
}

# Call the function
speak_datetime
