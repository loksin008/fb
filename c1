#!/bin/bash

speak_datetime() {
    current_datetime=$(date +"%A, %B %d, %I:%M %p")
    echo "Today is $current_datetime"
    
    if command -v espeak >/dev/null 2>&1 && command -v paplay >/dev/null 2>&1; then
        # Generate audio file, then play with paplay
        espeak "Today is $current_datetime" --stdout | paplay
    else
        echo "Error: espeak or paplay is not installed. Please install them and try again."
        exit 1
    fi
}

speak_datetime
