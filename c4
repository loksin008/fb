#!/bin/bash

# Function to change the terminal background color to red
set_background() {
    echo -e "\033[48;5;160m"  # Set background color to red (color code 160)
}

# Function to draw the large analog clock
draw_clock() {
    # Get the current time
    hours=$(date +%H)
    minutes=$(date +%M)
    seconds=$(date +%S)

    # Normalize hours for 12-hour clock
    if [ $hours -gt 12 ]; then
        hours=$((hours - 12))
    fi

    # Clear the terminal and set background
    clear
    set_background

    # Print clock frame and hands in big ASCII art
    echo "                   _________"
    echo "              .-'         `-."
    echo "           .-'               `-."
    echo "         .'                     `."
    echo "        /                         \\"
    echo "       ;       O               O    ;"
    echo "      ;                                 ;"
    echo "      |         O               O     |"
    echo "      ;                                 ;"
    echo "       ;         O               O    ;"
    echo "        \\                         /"
    echo "         `.                     .'"
    echo "           `-.               .-'"
    echo "              `-._________.-'"

    # Print current time
    echo ""
    echo "Time: $hours:$minutes:$seconds"

    # Use text-to-speech (espeak or another command) to announce the time
    if command -v espeak &> /dev/null; then
        espeak "The current time is $hours hours and $minutes minutes."
    else
        echo "Text-to-speech command (espeak) not found. Time: $hours:$minutes"
    fi
}

# Loop to keep the clock updating every second
while true
do
    draw_clock
    sleep 1
done
